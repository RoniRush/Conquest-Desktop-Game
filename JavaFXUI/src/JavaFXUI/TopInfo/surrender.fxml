<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane id="popUpBack" fx:id="leaveGamePane" maxHeight="400.0" maxWidth="600.0" minHeight="400.0" minWidth="600.0" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="JavaFXUI.TopInfo.TopControllers.surrenderController">
   <top>
      <VBox alignment="CENTER" prefHeight="122.0" prefWidth="600.0" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <Label styleClass="popLabel" text="SURRENDER?!" />
            <Label styleClass="popLabel" text="Why would you want to leave my wonderfull KINGDOM?" />
            <Label styleClass="popLabel" text="If you choose to quit, you can't come back... LIKE really you can't come back" textFill="RED" />
         </children>
      </VBox>
   </top>
   <bottom>
      <HBox alignment="CENTER" prefHeight="65.0" prefWidth="600.0" spacing="30.0" BorderPane.alignment="CENTER">
         <children>
            <Label styleClass="popLabel" text="There is no going back.. are you sure?" />
            <Button id="popButton" fx:id="yesButton" mnemonicParsing="false" onAction="#yesOnAction" prefHeight="25.0" prefWidth="47.0" text="YES" />
         </children>
      </HBox>
   </bottom>
   <center>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <ImageView fx:id="image" fitHeight="212.0" fitWidth="225.0" pickOnBounds="true" preserveRatio="true" />
         </children>
      </HBox>
   </center>
</BorderPane>
